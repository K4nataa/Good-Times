@model IEnumerable<Good_Times2._0.Models.Reservering>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nieuwe Reservering</a>
</p>
<table id="tab" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefoonnummer)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.AantalPersonen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Begintijd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eindtijd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opmerkingen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td title="Emailadres: @item.Email  Telefoonnummer: @item.Telefoonnummer ">
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefoonnummer)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.AantalPersonen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Begintijd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eindtijd)
                </td>
                <td title="@Html.DisplayFor(modelItem => item.Opmerkingen)">
                    @Html.DisplayFor(modelItem => item.opmerkingTrimmed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Aanpassen</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Annuleren</a>
                </td>
            </tr>
        }
    </tbody>
</table>

